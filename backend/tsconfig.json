{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "types": ["reflect-metadata"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
